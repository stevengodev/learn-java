<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">

    <Appenders>

        <!-- Appender de consola -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n"/>
        </Console>

        <!-- Appender de archivo -->
        <File name="FileAppender" fileName="logs/application.log" append="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</Pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers> 

        <!-- Logger de nivel INFO que escribe en la consola, este es el nivel minimo para mostrar -->
        <Logger name="com.foliaco.App" level="info" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <!-- Logger de nivel DEBUG que escribe en el archivo, este es el nivel minimo para mostrar -->
        <Logger name="com.foliaco.fileLogger" level="debug" additivity="false">
            <AppenderRef ref="FileAppender"/>
        </Logger>

         <!-- Root Logger, que utiliza tanto el appender de consola como el de archivo -->
         <!-- Los niveles de registro inferiores no se imprimiran en los apéndices. -->
         <!-- Los Logger dentro del Root heredarán este nivel pero si cada Logger tiene su propio nivel definido entonces se sobrescribira-->
        <Root level="trace">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Root>

    </Loggers>

</Configuration>